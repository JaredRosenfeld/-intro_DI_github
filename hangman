import random

wordslist = ['correction', 'childish', 'beach', 'python', 'assertive', 'interference', 'complete', 'share',
             'credit card', 'rush', 'south']
word = random.choice(wordslist)
results_dict = {}
used_letter_list = []
results = []

def random_word():
    new_random_word = ['*'] * len(word)
    print(new_random_word)
    return new_random_word

def player_guess():
    while True:
        guess = input("Please choose a letter a-z: ")
        if guess in used_letter_list:
            print("You have used the letter please try again")
        else:
            return guess

def is_in_list():
    guess = player_guess()
    count = 0
    while True:
        for keys, letters in enumerate(word):
                if letters == guess:
                    if count > 10:
                        break
                    print("ok")
                    results.append(letters)
                    print(results)
                    return True
        break


def is_not_in_list():
    guess = player_guess()
    for keys, letters in enumerate(word):
        if guess != letters:
            print("You are wrong that letter is not inside the word")
            if guess not in used_letter_list:
                    used_letter_list.append(guess)
                    print(used_letter_list)
            return True

def main():
    print(word)
    count = 0
    while True:
        count += 1
        if is_in_list() == True:
            print("yes")
            print(results_dict)
            print(word)
        elif is_not_in_list() == True:
            print("no")
        if count > 10:
            break
main()
