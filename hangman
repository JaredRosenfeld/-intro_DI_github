import random

wordslist = ['correction']
word = random.choice(wordslist)
word_list = list(word)
used_letter_list = []
results = {}
results_sorted = {}

def random_word():
    new_random_word = ['*'] * len(word)
    return new_random_word

print(word)

def guess1():
    while True:
        guess = str(input("Please choose a letter a-z: "))
        if guess in used_letter_list:
            print("You have used the letter please try again")
            break
        else:
            return guess

def append_to_list():
    print("Hello!!!\n"
          "Welcome to Hangman!\n"
          f"Here is your word {random_word()}\n"
          f"You have {len(word)} number of chances to unlock all the letters ")
    while True:
        guess = guess1()
        for i in range(len(word_list)):
            if word_list[i] == guess:
                results[i] = guess
                results_sorted = sorted(results.items())
                print(f"Correct! Here are all the {guess}s in the word ")
                print(results_sorted)
            elif guess not in used_letter_list:
                    used_letter_list.append(guess)
                    print("Used letters are here:")
                    print(used_letter_list)
    return results_sorted


append_to_list()
print(used_letter_list)
print(results_sorted.values())


               
